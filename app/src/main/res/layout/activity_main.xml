<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:textColor="#f20"
        android:textAllCaps="true"
        android:text="Đếm ngày"
        android:id="@+id/textviewTieude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="Chọn ngày min"
        android:layout_marginTop="50dp"
        android:layout_below="@id/textviewTieude"
        android:id="@+id/edittextNgaymin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Chọn ngày max"
        android:layout_marginTop="50dp"
        android:layout_below="@id/edittextNgaymin"
        android:id="@+id/edittextNgaymax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonDem"
        android:text="Tính"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edittextNgaymax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#f20"
        android:text="20 ngày"
        android:layout_below="@id/buttonDem"
        android:id="@+id/textviewNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>